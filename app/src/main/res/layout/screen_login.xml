<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:paddingHorizontal="8dp"
        android:id="@+id/login_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text1"
            style="@style/montserrat_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="78dp"
            android:text="Welcome"
            android:layout_gravity="center_horizontal"
            android:textColor="#5D74E8"
            android:textSize="32sp" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/montserrat_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please, enter your details"
            android:textColor="#585858"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text2"
            style="@style/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="10dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/bg_edit_text_login"
            android:hint="username"
            android:textColor="@color/black"
            android:paddingVertical="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_text3"
            style="@style/montserrat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="10dp"
            android:autofillHints="password"
            android:background="@drawable/bg_edit_text_login"
            android:hint="password"
            android:textColor="@color/black"
            android:paddingVertical="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_next"
            style="@style/montserrat_bold"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginVertical="32dp"
            android:background="@drawable/bg_next"
            android:elevation="0dp"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>